<Window x:Class="AdressBook.AddRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AdressBook"
        mc:Ignorable="d"
        Title="AddRecord" Height="180" Width="400">
    <Grid>
        <TextBox x:Name="Name" Text="" Margin="32,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="32" />
        <TextBox x:Name="Phone" Text="" Margin="32,72,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="32" />
        <Button Content="Confirm" Margin="40,112,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="ConfirmInput"/>
        <TextBlock Text="Phone" FontSize="14" Margin="160,72,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" />
        <TextBlock Text="Name" FontSize="14" Margin="160,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" />
    </Grid>
</Window>

<Window x:Class="AdressBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdressBook"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Title="MainWindow" Height="720" Width="1280">
    
    <Grid>
        <DataGrid x:Name="AdressTable" ItemsSource="{Binding}" Margin="0,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1280" Height="352" />
        <Button Content="Add" Margin="24,400,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Add_Click"/>
        <Button Content="Delete" Margin="120,400,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Remove_Click" />
        <Button Content="Edit" Margin="224,400,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Edit_Click" />
        <Button Content="Refresh" Margin="328,400,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Click="Refresh_Click" />
    </Grid>
</Window>
